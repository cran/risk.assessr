Package: risk.assessr
Title: Assessing Package Risk Metrics
Version: 3.0.1
Authors@R: c(
    person("Edward", "Gillian", , "edward.gillian-ext@sanofi.com", role = c("cre", "aut"), comment = c(ORCID = "0000-0003-2732-5107")),
